.point-photo
  height: 150px

.arrived, .photo-taken
  footer
    position: absolute
    bottom: 0px
    left: 0px
  .col-xs-12
    display: block
    .description
      display: flex
      justify-content: center

  header.charHead .other-char
    margin-top: -10px

.author
  font-size: 16px
  position: absolute
  top: 0
  right: 0
  font-weight: 300
  font-family: body-font

.description
  background: #fafafa
  margin: 10px
  margin-bottom: 80px
  padding: 8px
  box-shadow: 0px 1px 1px rgba(80,80,80,.25)
  h2
    text-align: left
    padding: 0px 6px
  p
    padding: 0px 6px
  
.custom-file {
  position: relative;
  display: inline-block;
  max-width: 100%;
  height: 40px;
  margin-bottom: 0;
  cursor: pointer;
}

.custom-file-input {
  min-width: 14rem;
  max-width: 100%;
  height: 40px;
  margin: 0;
  // filter: alpha('opacity=0');
  opacity: 0;
}

.custom-file-control {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  z-index: 5;
  height: 40px;
  width: 100%
  // padding: 10px;
  line-height: 1.5;
  color: #fff;
  pointer-events: none;
  user-select: none;
  background-color: main-red;
  border: 1px solid rgba(0, 0, 0, 0.15);
  border-radius: 10px;
  display: flex
  justify-content: center
  align-items: center
}

.custom-file-control:lang(en)::after {
  content: "ðŸ“· take photo";
}

.custom-file-control::before {
  position: absolute;
  top: -1px;
  right: -1px;
  bottom: -1px;
  z-index: 6;
  display: block;
  height: 0px
  overflow: hidden
  width: 0px;
  padding: 0.5rem 1rem;
  line-height: 1.5;
  color: #464a4c;
  // background-color: #eceeef;
  // border: 1px solid rgba(0, 0, 0, 0.15);
  border-radius: 0 0.25rem 0.25rem 0;
}

.custom-file-control:lang(en)::before {
  content: "";
}

.previewPhoto
  width: 100vw
  height: 108px
  object-fit: cover
  object-position: center
  display: block

.btn-nomargin
  margin: 6px 0px
  width: 100%

.photos
  display: block
  height: 56.25vw
  overflow: hidden
  width: 100vw
  picture
    object-fit: cover
    object-position: center