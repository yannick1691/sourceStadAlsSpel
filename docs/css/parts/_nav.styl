.active
  color: lighter-red

.logo
  width: 155px
  max-width: calc(100% - 60px)

.back-arrow
  width: 50px
  height: 50px
  margin: 0px
  // position: absolute
  left: 15px
  top: 15px
  background: none
  flex: 1 1 25%
  i
    font-size: 25px

header
  height: 80px
  width: 100vw
  display: flex
  justify-content: space-around
  align-items: center
  position: relative
  align-self: flex-start

.create
  header
    background: main-red

.nav.nav-tabs
  display: flex
  flex-wrap: nowrap
  flex-direction: row
  overflow: hidden
  overflow-x: scroll
  -webkit-overflow-scrolling: touch;
  width: 100%
  background: main-red
  border-bottom: none

  &::-webkit-scrollbar
    background: none
    width: 100%;
    height: 0px

  li
    padding: 0px 8px
    &.active
      background: darker-red
      a
        background: none
        border: none
        outline: none
        color: white
    a
      color: white
      border: none
      &:hover
        background: none
        outline: none
        border: none
      &:focus
        background: none
        outline none
        border none


// Character HEADER
header.charHead
  width: 100%
  background: main-red
  position: relative
  justify-content: flex-start
  top: 0px
  left: 0px
  .other-char
    margin-left: 110px
    margin-top: 10px
  h1,h2
    color: white
  .character
    position: absolute
    top: 0px
    left: 0px
    z-index: 20
    background-image: url('../links/img/background-char.png');
    background-position: center
    background-size: 140%
    box-shadow: 1px 1px 2px rgba(0,0,0,0.25)

// Red header
.register header
  background-color: main-red

// XP Bar CSS
.xpBar
  display: grid
  grid-template-columns: 15px auto 15px
  grid-template-rows: 2px 0px
  p
    width: 100%
    text-align: center
    display: flex
    justify-content: center
    align-items: center
    height: 20px
    color: white