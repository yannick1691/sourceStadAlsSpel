.filter
  width: 100%
  
.highscoreList
  list-style: none
  padding: 5px
  background: #ffffff
  margin: 0 30px
  width: calc(100% - 60px)
  box-shadow: 0px 2px 1px -1px rgba(black, .2)
  padding-bottom: 10px
  margin-bottom: 80px

.rank
  list-style: none
  padding: 0
  margin: 0
  margin: 5px 0px
  .row
    display: flex
    justify-content: space-around
    align-items: center
    h3
      margin: 0
      padding: 0
      text-align: center
      width: 10%
    p
      margin: 0
      padding: 0

.likes
  width: 25%
  text-align: right
  display: inline-block
  white-space: nowrap
  span
    font-size: 10px


.playerName
  width: 50%
  display: inline-block

.highScoreChar
  width: 22%
  padding-top: 22%
  position: relative
  overflow: hidden
  img
    position: absolute
    top: 0
    left :0
    height: 100%
    width: 100%
    color: #333
    font-family: body-font

.yourpos
  display: flex
  width: 100%
  justify-content: center
  align-items: center
  position: relative
  padding-left: 20%
  height: 30px
  margin-bottom: 7px
  background: #fff
  box-shadow: 0px 2px 1px -1px rgba(black, .2)