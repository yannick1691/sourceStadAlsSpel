.alerts
  list-style: none
  margin: 10px
  margin-top: 10%
  background: #fff
  padding: 0
  box-shadow: 0px 2px 1px -1px rgba(black, .2)
  li
    list-style: none
    margin: 0
    padding 5px 10px
    display: flex
    align-items: center
    i
      font-size: 50px
      display: inline-block
      width: 75px
      position: relative
    p
      display: inline-block
      width: calc(100% - 95px)
      padding-left: 10px
      position: relative
      margin: 0