html
  background-color: main-background
body
  max-width: 100vw
  overflow-x: hidden

.container-fluid
  // display: block
  width: 100vw
  min-height: 100vh
  margin: 0
  padding: 0
  background-color: #f3f3f3
  position: relative
  &.login
    background-image: url('../links/img/background-app.jpg')
    background-position: center;
    background-size: cover
    background-repeat: no-repeat
  &.loginScreen
    background-color: main-red
  &.create
    display: grid
    min-height: 100vh
    grid-template-columns: 100%
    grid-template-rows: 0px 80px 47vh 25px 200px 80px
    button
      height: 30px
      margin-top: 10px

.col-xs-12
  display: flex
  // margin-top: 30px
  flex-direction: column
  justify-content: center
  align-items: center
  &.createCharEdit
    justify-content: flex-start
    margin-top: 10px

.row
  padding: 0
  margin: 0

img
  width: 100%

.tab-content
  width: 100%

.white-space
  flex: 1 1 25%

.main
  display: grid
  grid-template-columns: 100%
  grid-template-rows: 50% 50%
  height: calc(100vh - 150px)
  a.route
    background-image: url('../links/img/berlin-snazzy.png');
    background-size: cover
    display: flex
    justify-content: center
    align-items: center
    position: relative
    width: 100%
    height: 100%
    h2
      color: white
      z-index: 2
      font-size: 2.8em
    .overlay
      position: absolute
      display: block
      width: 100%
      height: 100%
      left: 0
      top: 0
      background-color: rgba(51,51,51,0.56)

  a.free
    background-image: url('../links/img/berlin-free.png');
    background-size: cover
    display: flex
    justify-content: center
    align-items: center
    position: relative
    width: 100%
    height: 100%
    h2
      color: white
      z-index: 2
      font-size: 2.8em
    .overlay
      position: absolute
      display: block
      width: 100%
      height: 100%
      top: 0
      left: 0
      background-color: rgba(51,51,51,0.5)
    
.scan .overlay
  position: fixed;
  display: block;
  width: 100%;
  height: 100%;
  background-color: rgba(51,51,51,0.56);
  z-index: 20
  top: 0px

footer
  position: absolute
  bottom: 0
  left: 0

.loginScreen
  .col-xs-12
    padding: 12px
    form
      width: 100%
      button
        width: 100%
        margin: 0

@supports not (display: grid)
  .container-fluid
    &.create
      display: flex
      button
        height: 30px
        margin-top: 10px
      header
        flex: 0 0 80px
      .creat-char-wrapper
        height: 43vh
      .charAssetsWrap
        height: 60vh
